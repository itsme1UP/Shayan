import cv2
import numpy as np

def preprocess_image(img_path, img_size=(128,128)):
    """
    Load an image, resize, normalize, and apply simple filtering.
    Beginner style: lots of prints and checks.
    """
    try:
        img = cv2.imread(img_path)
        if img is None:
            print("Warning: could not read image:", img_path)
            return None
        print("Original shape:", img.shape)

        # Resize image
        img = cv2.resize(img, img_size)
        print("Resized to:", img.shape)

        # Gaussian blur to reduce noise
        img = cv2.GaussianBlur(img, (3,3), 0)

        # Normalize to 0-1
        img = img / 255.0

        return img
    except Exception as e:
        print("Error preprocessing image:", img_path, e)
        return None
